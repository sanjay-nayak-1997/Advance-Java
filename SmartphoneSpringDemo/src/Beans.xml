<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id="sp" class="com.deloitte.SmartPhone">
<property name="name" value="OnePlus"></property>
<property name="price" value="32000"></property>
<constructor-arg ref="a"></constructor-arg>
</bean>   
   <bean id="a" class="com.deloitte.Application">
   <property name="name" value="PUBG"></property>
   <property name="type" value="Game"></property>
   </bean>
   
</beans>